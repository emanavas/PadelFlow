<!DOCTYPE html>
<html lang="<%= currentLanguage %>">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= t('player.dashboard.title') %></title>
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/player_dashboard.css" />
</head>

<body>
  <%- include('partials/player_header') %>
    <div class="player-shell d-flex">
      <!-- Sidebar -->
      <%- include('partials/player_sidebar') %>

        <!-- Main -->
        <div class="flex-grow-1 p-4" style="background-color: #f0f2f5;">
          <!-- Content -->
          <main class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 mb-0 text-dark"><%= t('player.dashboard.welcome', { name: user.name }) %></h1>
            </div>

            <!-- Personal Stats -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <div class="card text-white" style="background: linear-gradient(45deg, #3a7bd5, #3a6073);">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><%= t('player.dashboard.stats.matches_played') %></h5>
                                    <p class="card-text fs-4"><%= stats.partidosJugados %></p>
                                </div>
                                <i class="fas fa-table-tennis fa-3x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white" style="background: linear-gradient(45deg, #6a11cb, #2575fc);">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><%= t('player.dashboard.stats.wins') %></h5>
                                    <p class="card-text fs-4"><%= stats.victorias %></p>
                                </div>
                                <i class="fas fa-trophy fa-3x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white" style="background: linear-gradient(45deg, #f7971e, #ffd200);">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><%= t('player.dashboard.stats.effectiveness') %></h5>
                                    <p class="card-text fs-4"><%= stats.efectividad %></p>
                                </div>
                                <i class="fas fa-bullseye fa-3x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white" style="background: linear-gradient(45deg, #e52d27, #b31217);">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><%= t('player.dashboard.stats.next_match') %></h5>
                                    <p class="card-text fs-4"><%= stats.proximoPartido %></p>
                                </div>
                                <i class="fas fa-calendar-alt fa-3x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Invitations -->
            <% if (pendingInvitations && pendingInvitations.length > 0) { %>
            <div class="card mb-4 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-bell me-2"></i><%= t('player.dashboard.invitations.title') %></h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% pendingInvitations.forEach(invitation => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <%- t('player.dashboard.invitations.invitation_text', { inviting_user_name: invitation.inviting_user_name, tournament_name: invitation.tournament_name }) %>
                                </div>
                                <div>
                                    <form action="/player/invitations/<%= invitation.id %>/accept" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm me-2"><%= t('player.dashboard.invitations.accept') %></button>
                                    </form>
                                    <form action="/player/invitations/<%= invitation.id %>/decline" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm"><%= t('player.dashboard.invitations.decline') %></button>
                                    </form>
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <% } %>

            <!-- Available Competitions -->
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><%= t('player.dashboard.available_tournaments.title') %></h4>
                </div>
                <div class="card-body">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="<%= t('player.dashboard.available_tournaments.search_placeholder') %>">
                        <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i></button>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% availableTournaments.forEach(tournament => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1"><%= tournament.name %></h5>
                                    <small class="text-muted"><%= tournament.club_name %> | <%= t('player.dashboard.available_tournaments.deadline') %>: <%= new Date(tournament.end_date).toLocaleDateString() %> | <%= t('player.dashboard.available_tournaments.available_slots') %>: <%= tournament.available_slots %></small>
                                </div>
                                <button class="btn btn-success enroll-btn" data-tournament-id="<%= tournament.id %>" data-tournament-name="<%= tournament.name %>"><%= t('player.dashboard.available_tournaments.enroll_button') %></button>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>

            <!-- My Competitions -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><%= t('player.dashboard.my_tournaments.title') %></h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <% myTournaments.forEach(tournament => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1"><%= tournament.name %></h5>
                                    <p class="mb-1"><strong><%= t('player.dashboard.my_tournaments.position') %>:</strong> <%= tournament.position %></p>
                                    <small class="text-muted"><%= t('player.dashboard.my_tournaments.next_match') %>: <%= tournament.nextMatch %></small>
                                </div>
                                <a href="/player/tournaments/<%= tournament.id %>" class="btn btn-info"><%= t('player.dashboard.my_tournaments.view_tournament_button') %></a>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>

          </main>
        </div>
    </div>

    <!-- Enrollment Modal -->
    <div class="modal fade" id="enrollmentModal" tabindex="-1" aria-labelledby="enrollmentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="enrollmentModalLabel"><%= t('player.dashboard.enrollment_modal.title') %> <span id="modalTournamentName"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><%= t('player.dashboard.enrollment_modal.question') %></p>
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-primary" id="enrollAloneBtn"><%= t('player.dashboard.enrollment_modal.enroll_alone_button') %></button>
                        <button class="btn btn-secondary" id="enrollWithPartnerBtn"><%= t('player.dashboard.enrollment_modal.enroll_with_partner_button') %></button>
                    </div>

                    <div id="partnerEnrollmentForm" style="display: none;">
                        <h6><%= t('player.dashboard.enrollment_modal.invite_partner_title') %></h6>
                        <div class="mb-3">
                            <input type="text" class="form-control" id="playerSearchInput" placeholder="<%= t('player.dashboard.enrollment_modal.search_placeholder') %>">
                            <div id="playerSearchResults" class="list-group mt-2"></div>
                        </div>
                        <button class="btn btn-success" id="sendInvitationBtn" disabled><%= t('player.dashboard.enrollment_modal.send_invitation_button') %></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const enrollmentModal = new bootstrap.Modal(document.getElementById('enrollmentModal'));
            const modalTournamentName = document.getElementById('modalTournamentName');
            const enrollAloneBtn = document.getElementById('enrollAloneBtn');
            const enrollWithPartnerBtn = document.getElementById('enrollWithPartnerBtn');
            const partnerEnrollmentForm = document.getElementById('partnerEnrollmentForm');
            const playerSearchInput = document.getElementById('playerSearchInput');
            const playerSearchResults = document.getElementById('playerSearchResults');
            const sendInvitationBtn = document.getElementById('sendInvitationBtn');

            let selectedTournamentId = null;
            let selectedPartnerId = null;

            document.querySelectorAll('.enroll-btn').forEach(button => {
                button.addEventListener('click', function() {
                    selectedTournamentId = this.dataset.tournamentId;
                    modalTournamentName.textContent = this.dataset.tournamentName;
                    partnerEnrollmentForm.style.display = 'none'; // Hide partner form by default
                    enrollmentModal.show();
                });
            });

            enrollAloneBtn.addEventListener('click', async function() {
                if (selectedTournamentId) {
                    const response = await fetch(`/player/tournaments/${selectedTournamentId}/enroll-alone`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    const result = await response.json();
                    if (result.success) {
                        alert('<%= t("player.dashboard.enrollment_modal.alert.enroll_alone_success") %>');
                        window.location.reload(); // Reload to update tournament lists
                    } else {
                        alert(`<%= t("player.dashboard.enrollment_modal.alert.enroll_error") %>: ${result.message}`);
                    }
                    enrollmentModal.hide();
                } else {
                    alert('<%= t("player.dashboard.enrollment_modal.alert.select_tournament") %>');
                }
            });

            enrollWithPartnerBtn.addEventListener('click', function() {
                partnerEnrollmentForm.style.display = 'block';
                playerSearchInput.value = '';
                playerSearchResults.innerHTML = '';
                sendInvitationBtn.disabled = true;
                selectedPartnerId = null;
            });

            playerSearchInput.addEventListener('input', async function() {
                const query = this.value;
                if (query.length < 3) {
                    playerSearchResults.innerHTML = '';
                    sendInvitationBtn.disabled = true;
                    selectedPartnerId = null;
                    return;
                }

                const response = await fetch(`/api/players/search?q=${query}`);
                const players = await response.json();

                playerSearchResults.innerHTML = '';
                if (players.length > 0) {
                    players.forEach(player => {
                        const item = document.createElement('a');
                        item.href = '#';
                        item.classList.add('list-group-item', 'list-group-item-action');
                        item.textContent = `${player.name} (${player.email})`;
                        item.dataset.playerId = player.id;
                        item.addEventListener('click', function(e) {
                            e.preventDefault();
                            playerSearchInput.value = player.name; // Display selected player's name
                            selectedPartnerId = this.dataset.playerId;
                            sendInvitationBtn.disabled = false;
                            playerSearchResults.innerHTML = ''; // Clear results after selection
                        });
                        playerSearchResults.appendChild(item);
                    });
                } else {
                    playerSearchResults.innerHTML = `<div class="list-group-item"><%= t("player.dashboard.enrollment_modal.alert.no_players_found") %></div>`;
                }
            });

            sendInvitationBtn.addEventListener('click', async function() {
                if (selectedTournamentId && selectedPartnerId) {
                    console.log(`Sending invitation for tournament ${selectedTournamentId} to player ${selectedPartnerId}`);
                    const response = await fetch(`/player/tournaments/${selectedTournamentId}/invite`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ invitedUserId: selectedPartnerId })
                    });
                    const result = await response.json();
                    if (result.success) {
                        alert('<%= t("player.dashboard.enrollment_modal.alert.invitation_sent_success") %>');
                    } else {
                        if(result.message){
                            alert(result.message);
                        }else{
                            alert('<%= t("player.dashboard.enrollment_modal.alert.invitation_error") %>');
                        }
                    }
                    enrollmentModal.hide();
                } else {
                    alert('<%= t("player.dashboard.enrollment_modal.alert.select_tournament_and_partner") %>');
                }
            });
        });
    </script>
</body>

</html>