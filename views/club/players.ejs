<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>
    <%= title %> — PádelManager
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/dashboard.css" />
</head>

<body>
  <%- include('partials/club_header', { user: user, club: club }) %>
    <div class="admin-shell">
      <!-- Sidebar -->

      <%- include('partials/club_sidebar', { club: club }) %>

        <!-- Main -->
        <div class="main flex-grow-1">
          <!-- Content -->
          <main class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 mb-0">
                <%= title %>
              </h1>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#createPlayerModal">
                Crear Nuevo Jugador
              </button>
            </div>

            <div class="card">
              <div class="card-header">
                Lista de Jugadores
              </div>
              <div class="card-body">
                <% if (players && players.length> 0) { %>
                  <ul class="list-group" id="playersList">
                    <% players.forEach(player=> { %>
                      <li class="list-group-item d-flex justify-content-between align-items-center"
                        data-player-id="<%= player.id %>">
                        <%= player.name %> (<%= player.email %>)
                          <div>
                            <button type="button" class="btn btn-sm btn-info me-2 edit-player-btn"
                              data-bs-toggle="modal" data-bs-target="#editPlayerModal"
                              data-player-id="<%= player.id %>" data-player-name="<%= player.name %>"
                              data-player-email="<%= player.email %>">
                              Editar
                            </button>
                            <a href="/club/players/add-to-tournament/<%= player.id %>"
                              class="btn btn-sm btn-success me-2">Añadir a Torneo</a>
                            <button type="button" class="btn btn-sm btn-danger delete-player-btn"
                              data-bs-toggle="modal" data-bs-target="#deletePlayerModal"
                              data-player-id="<%= player.id %>" data-player-name="<%= player.name %>">
                              Eliminar
                            </button>
                          </div>
                      </li>
                      <% }); %>
                  </ul>
                  <% } else { %>
                    <p id="noPlayersMessage">No hay jugadores registrados en este club.</p>
                    <% } %>
              </div>
            </div>

          </main>
        </div>
    </div>

    <!-- Create Player Modal -->
    <div class="modal fade" id="createPlayerModal" tabindex="-1" aria-labelledby="createPlayerModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createPlayerModalLabel">Crear Nuevo Jugador</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="createPlayerForm">
            <div class="modal-body">
              <div class="mb-3">
                <label for="createPlayerName" class="form-label">Nombre del Jugador:</label>
                <input type="text" class="form-control" id="createPlayerName" name="name" required>
              </div>
              <div class="mb-3">
                <label for="createPlayerEmail" class="form-label">Email:</label>
                <input type="email" class="form-control" id="createPlayerEmail" name="email" required>
              </div>
              <div class="mb-3">
                <label for="createPlayerPassword" class="form-label">Contraseña:</label>
                <input type="password" class="form-control" id="createPlayerPassword" name="password" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
              <button type="submit" class="btn btn-primary">Crear Jugador</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Edit Player Modal -->
    <div class="modal fade" id="editPlayerModal" tabindex="-1" aria-labelledby="editPlayerModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editPlayerModalLabel">Editar Jugador</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="editPlayerForm">
            <input type="hidden" id="editPlayerId" name="id">
            <div class="modal-body">
              <div class="mb-3">
                <label for="editPlayerName" class="form-label">Nombre del Jugador:</label>
                <input type="text" class="form-control" id="editPlayerName" name="name" required>
              </div>
              <div class="mb-3">
                <label for="editPlayerEmail" class="form-label">Email:</label>
                <input type="email" class="form-control" id="editPlayerEmail" name="email" readonly>
              </div>
              <!-- Password field for edit is tricky with bcrypt, usually handled separately or not allowed to change here -->
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
              <button type="submit" class="btn btn-primary">Actualizar Jugador</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Delete Player Modal -->
    <div class="modal fade" id="deletePlayerModal" tabindex="-1" aria-labelledby="deletePlayerModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deletePlayerModalLabel">Eliminar Jugador</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>¿Estás seguro de que quieres eliminar a <strong id="deletePlayerName"></strong>?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <form id="deletePlayerForm" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    
    <script src="/js/player-management.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>