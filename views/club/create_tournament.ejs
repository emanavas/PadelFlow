<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>
    <%= title %> — PadelFlow
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/dashboard.css" />
  <style>
    .step-options {
      display: none;
    }
  </style>
</head>

<body>
  <%- include('partials/club_header') %>
    <div class="admin-shell">
      <!-- Sidebar -->
      <%- include('partials/club_sidebar', { club: club }) %>

        <!-- Main -->
        <div class="main flex-grow-1">
          <!-- Content -->
          <main class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 mb-0">
                <%= title %>
              </h1>
              <div>
                <a href="/club/dashboard" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Volver al
                  Dashboard</a>
              </div>
            </div>

            <form action="/club/tournaments/create" method="POST">

              <!-- Step 1: Tournament Details -->
              <div class="card mb-4">
                <div class="card-header">
                  <h5><i class="fas fa-info-circle me-2"></i>Paso 1: Detalles del Torneo</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="name" class="form-label">Nombre del Torneo</label>
                      <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="type" class="form-label">Tipo de Torneo</label>
                      <select class="form-select" id="type" name="type" required>
                        <option selected disabled value="">Elige un tipo...</option>
                        <option value="Round Robin">Round Robin</option>
                        <option value="Elimination">Eliminación</option>
                        <option value="League">Liga</option>
                        <option value="Americana">Americana</option>
                      </select>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                  </div>
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <label for="startDate_date" class="form-label">Fecha de Inicio</label>
                      <input type="date" class="form-control" id="startDate_date" name="startDate_date" required>
                    </div>
                    <div class="col-md-2 mb-3">
                      <label for="startTime" class="form-label">Hora de Inicio</label>
                      <input type="time" class="form-control" id="startTime" name="startTime" required>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="endDate" class="form-label">Fecha de Fin</label>
                      <input type="date" class="form-control" id="endDate" name="endDate" required>
                    </div>
                  </div>
                  <input type="hidden" id="startDate" name="startDate">
                </div>
              </div>

              <!-- Step 3: Court Configuration -->
              <div class="card mb-4">
                <div class="card-header">
                  <h5><i class="fas fa-layer-group me-2"></i>Paso 2: Configuración de Pistas</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label class="form-label">Seleccionar Pistas a Utilizar</label>
                      <div>
                        <% if (courts && courts.length > 0) { %>
                          <% courts.forEach(function(court) { %>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="courtIds[]"
                                id="court_<%= court.id %>" value="<%= court.id %>">
                              <label class="form-check-label" for="court_<%= court.id %>">
                                <%= court.name %>
                              </label>
                            </div>
                            <% }); %>
                        <% } else { %>
                          <p class="text-muted">No hay pistas disponibles. Por favor, crea algunas primero.</p>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Step 2: Tournament Options -->
              <div class="card mb-4">
                <div class="card-header">
                  <h5><i class="fas fa-cogs me-2"></i>Opciones Extras</h5>
                </div>
                <div class="card-body">
                  <!-- Options for Round Robin -->
                  <div id="options-round-robin" class="step-options">
                    <p>Opciones específicas para Round Robin (ej: número de grupos).</p>
                    <!-- Add Round Robin specific fields here -->
                  </div>
                  <!-- Options for Elimination -->
                  <div id="options-elimination" class="step-options">
                    <p>Opciones específicas para Eliminación (ej: cuadro simple o doble).</p>
                    <!-- Add Elimination specific fields here -->
                  </div>
                  <!-- Options for League -->
                  <div id="options-league" class="step-options">
                    <p>Opciones específicas para Liga (ej: puntos por victoria/empate).</p>
                    <!-- Add League specific fields here -->
                  </div>
                  <!-- Options for Americana -->
                  <div id="options-americana" class="step-options">
                    <p>Opciones específicas para Americana (ej: puntos por partido ganado).</p>
                    <!-- Add Americana specific fields here -->
                  </div>
                  <div id="options-default" class="step-options">
                    <p class="text-muted">Selecciona un tipo de torneo para ver las opciones.</p>
                  </div>
                </div>
              </div>

          </main>
        </div>
    </div>

    <div class="fixed-bottom-bar d-flex justify-content-end p-3 bg-light border-top shadow-sm">
      <a href="/club/dashboard" class="btn btn-secondary me-2">Cancelar</a>
      <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i>Crear Torneo</button>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const typeSelect = document.getElementById('type');
        const allOptions = document.querySelectorAll('.step-options');
        const defaultOption = document.getElementById('options-default');

        function showRelevantOptions() {
          // Hide all options first
          allOptions.forEach(el => el.style.display = 'none');

          // Get selected type and format it for the ID
          const selectedType = typeSelect.value.toLowerCase().replace(' ', '-');
          const targetOptions = document.getElementById(`options-${selectedType}`);

          if (targetOptions) {
            targetOptions.style.display = 'block';
          } else {
            defaultOption.style.display = 'block';
          }
        }

        // Initial check
        showRelevantOptions();

        // Add event listener
        typeSelect.addEventListener('change', showRelevantOptions);

        // Combine date and time for submission
        const form = document.querySelector('form');
        const startDate_date = document.getElementById('startDate_date');
        const startTime = document.getElementById('startTime');
        const hiddenStartDate = document.getElementById('startDate');

        form.addEventListener('submit', function(e) {
            const date = startDate_date.value;
            const time = startTime.value;
            if (date && time) {
                hiddenStartDate.value = `${date}T${time}`;
            }
        });
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>