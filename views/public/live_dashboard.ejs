<%- include('../layouts/main') %>

<div class="container mt-4">
    <h1 class="text-center mb-4">Wallshow en Vivo: <%= tournament.name %></h1>

    <div id="matches-container" class="row row-cols-1 row-cols-md-2 g-4">
        <% if (matches && matches.length > 0) { %>
            <% matches.forEach(match => { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center"><%= match.player1_name %> vs <%= match.player2_name %></h5>
                            <p class="card-text text-center display-4" id="score-<%= match.id %>"><%= match.score || '0-0' %></p>
                            <div class="mt-auto text-center">
                                <!-- Example: Button to suggest score (if applicable) -->
                                <button class="btn btn-sm btn-outline-info" onclick="sendScoreSuggestion(<%= match.id %>, '7-5')">Sugerir 7-5</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center">No hay partidos activos para mostrar en este momento.</div>
            </div>
        <% } %>
    </div>

    <div class="text-center mt-4">
        <a href="/" class="btn btn-secondary">Volver al Inicio</a>
    </div>
</div>

<script type="module" src="/js/sse-client.js"></script>
