<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard — Usuarios</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/dashboard.css" />
</head>

<body>
  <%- include('partials/admin_header') %>
    <div class="admin-shell">
      <!-- Sidebar -->
      <%- include('partials/admin_sidebar') %>

        <!-- Main -->
        <div class="main flex-grow-1">
          <!-- Content -->
          <main class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 mb-0">Gestión de Usuarios</h1>
              <div>
                <a href="/admin/users/create" class="btn btn-primary"><i class="fas fa-user-plus me-1"></i> Crear Nuevo
                  Usuario</a>
              </div>
            </div>

            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <i class="fas fa-users me-2"></i>
                  Lista de Usuarios
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Email</th>
                          <th>Rol</th>
                          <th>Club</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% allUsers.forEach(user=> { %>
                          <tr>
                            <td>
                              <%= user.id %>
                            </td>
                            <td>
                              <%= user.email %>
                            </td>
                            <td>
                              <%= user.role %>
                            </td>
                            <td>
                              <%= user.club_name || 'N/A' %>
                            </td>
                            <td>
                              <!-- Add action buttons here (e.g., Edit, Delete) -->
                              <a href="/admin/users/edit/<%= user.id %>" class="btn btn-sm btn-info">Editar</a>
                              <a href="#" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                          </tr>
                          <% }); %>
                      </tbody>
                    </table>
                  </div>
                  <% if (allUsers.length===0) { %>
                    <p class="text-center">No hay usuarios registrados.</p>
                    <% } %>
                </div>
              </div>
            </div>

          </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>