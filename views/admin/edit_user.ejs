<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard — Editar Usuario</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/dashboard.css" />
</head>

<body>
  <%- include('partials/admin_header') %>
    <div class="admin-shell">
      <!-- Sidebar -->
      <%- include('partials/admin_sidebar') %>

        <!-- Main -->
        <div class="main flex-grow-1">
          <!-- Content -->
          <main class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 mb-0">Editar Usuario</h1>
              <div>
                <a href="/admin/users" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Volver a
                  Usuarios</a>
              </div>
            </div>

            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <i class="fas fa-user-edit me-2"></i>
                  Formulario de Edición de Usuario
                </div>
                <div class="card-body">
                  <form action="/admin/users/edit/<%= userToEdit.id %>" method="POST">
                    <div class="mb-3">
                      <label for="name" class="form-label">Nombre</label>
                      <input type="text" class="form-control" id="name" name="name" value="<%= userToEdit.name %>" required>
                    </div>
                    <div class="mb-3">
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control" id="email" name="email" value="<%= userToEdit.email %>"
                        required>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Nueva Contraseña (dejar en blanco para no
                        cambiar)</label>
                      <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="mb-3">
                      <label for="role" class="form-label">Rol</label>
                      <select class="form-select" id="role" name="role" required>
                        <option value="player" <%=userToEdit.role==='player' ? 'selected' : '' %>>Jugador</option>
                        <option value="club_admin" <%=userToEdit.role==='club_admin' ? 'selected' : '' %>>Administrador
                          de Club</option>
                        <option value="platform_admin" <%=userToEdit.role==='platform_admin' ? 'selected' : '' %>
                          >Administrador de Plataforma</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="club_id" class="form-label">Club (Opcional)</label>
                      <select class="form-select" id="club_id" name="club_id">
                        <option value="" <%=userToEdit.club_id===null ? 'selected' : '' %>>Ninguno</option>
                        <% clubs.forEach(club=> { %>
                          <option value="<%= club.id %>" <%=userToEdit.club_id===club.id ? 'selected' : '' %>><%=
                            club.name %>
                          </option>
                          <% }); %>
                      </select>
                      <small class="form-text text-muted">Solo para roles de Jugador o Administrador de Club.</small>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a href="/admin/users" class="btn btn-secondary">Cancelar</a>
                  </form>
                </div>
              </div>
            </div>

          </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>