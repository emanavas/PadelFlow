<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard — PádelManager</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/dashboard.css" />
</head>

<body>
  <%- include('partials/admin_header') %>
    <div class="admin-shell">
      <!-- Sidebar -->

      <%- include('partials/admin_sidebar') %>

        <!-- Main -->
        <div class="main flex-grow-1">
          <!-- Content -->
          <main class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h1 class="h3 mb-0">Dashboard</h1>
              <div>
              </div>
            </div>

            <!-- Stats -->
            <div class="row g-3 mb-4">
              <div class="col-sm-6 col-md-6 col-xl-3">
                <div class="card stat-card">
                  <div class="card-body bg-primary">
                    <div class="d-flex justify-content-between">
                      <div>
                        <small class="text-muted">Eventos activos</small>
                        <h4 id="statEvents"><%= locals.tournaments ? tournaments.length : 0 %></h4>
                      </div>
                      <div class="icon text-white d-flex align-items-center justify-content-center">
                        <i class="fas fa-calendar-check fa-2xl"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-sm-6 col-md-6 col-xl-3">
                <div class="card stat-card">
                  <div class="card-body bg-success">
                    <div class="d-flex justify-content-between">
                      <div>
                        <small class="text-muted">Jugadores inscritos</small>
                        <h4 id="statPlayers">0</h4>
                      </div>
                      <div class="icon text-white d-flex align-items-center justify-content-center">
                        <i class="fas fa-users fa-2xl"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-sm-6 col-md-6 col-xl-3">
                <div class="card stat-card">
                  <div class="card-body bg-warning">
                    <div class="d-flex justify-content-between">
                      <div>
                        <small class="text-muted">Partidos hoy</small>
                        <h4 id="statMatches">0</h4>
                      </div>
                      <div class="icon text-white d-flex align-items-center justify-content-center">
                        <i class="fas fa-table-tennis fa-2xl"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-sm-6 col-md-6 col-xl-3">
                <div class="card stat-card">
                  <div class="card-body bg-info">
                    <div class="d-flex justify-content-between">
                      <div>
                        <small class="text-muted">Ingresos (mes)</small>
                        <h4 id="statRevenue">€0</h4>
                      </div>
                      <div class="icon text-white d-flex align-items-center justify-content-center">
                        <i class="fas fa-credit-card fa-2xl"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Dashboard content -->
            <div class="d-flex gap-3 flex-wrap">
              <div class="col-12">

                <div class="w-100">
                  <div class="card">
                    <div class="card-header">
                      <i class="fas fa-chart-bar me-2"></i>
                      Estadísticas de Inscripciones
                    </div>
                    <div class="card-body">
                      <canvas id="registrationsChart"></canvas>
                    </div>
                  </div>
                </div>
              </div>


              <!-- average of views/request of tournament live wallshow -->
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <i class="fas fa-chart-line me-2"></i>
                    Promedio de Visualizaciones / Solicitudes
                  </div>
                  <div class="card-body">
                    <canvas id="viewsRequestsChart"></canvas>
                  </div>
                </div>
              </div>

              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    Ranking de Clubs por Actividad
                  </div>
                  <ul class="list-group list-group-flush">
                    <% if (locals?.clubs && locals?.clubs.length> 0) { %>
                      <% clubs.forEach((club, index)=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                          <div>
                            <span class="fw-bold">#<%= index + 1 %></span>
                            <%= club.name %>
                          </div>
                          <span class="badge bg-primary rounded-pill">
                            <%= club.tournament_count %> torneos
                          </span>
                        </li>
                        <% }); %>
                          <% } else { %>
                            <li class="list-group-item">No hay datos de actividad de clubs.</li>
                            <% } %>
                  </ul>
                </div>
              </div>

              <div class="col-lg-6">
                <div class="card mb-3">
                  <div class="card-header">
                    <i class="fas fa-eye text-info me-2"></i>
                    Espectadores de Wallshow
                  </div>
                  <div class="card-body text-center">
                    <h3 class="card-title display-4">
                      <%= locals.totalWallshowUsers %>
                    </h3>
                    <p class="card-text text-muted">Usuarios en vivo ahora</p>
                  </div>
                </div>
              </div>

              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <i class="fas fa-trophy me-2"></i>
                    Torneos
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Inicio</th>
                            <th>Fin</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (locals.tournaments && tournaments.length > 0) { %>
                            <% tournaments.forEach(tournament => { %>
                              <tr>
                                <td><%= tournament.name %></td>
                                <td><%= tournament.type %></td>
                                <td><%= new Date(tournament.start_date).toLocaleDateString() %></td>
                                <td><%= new Date(tournament.end_date).toLocaleDateString() %></td>
                                <td><span class="badge bg-success"><%= tournament.status %></span></td>
                                <td>
                                  <a href="/admin/tournaments/manage/<%= tournament.id %>" class="btn btn-sm btn-primary">Gestionar</a>
                                </td>
                              </tr>
                            <% }); %>
                          <% } else { %>
                            <tr>
                              <td colspan="6" class="text-center">No hay torneos para mostrar.</td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

            </div>



        </div>

        <main>
    </div>
    </div>

    <!-- Modal quick create -->
    <div class="modal fade" id="modalQuickEvent" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <form id="quickEventForm" class="needs-validation" novalidate>
            <div class="modal-header">
              <h5 class="modal-title">Crear evento rápido</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Nombre</label>
                  <input type="text" id="qName" class="form-control" required />
                  <div class="invalid-feedback">Nombre requerido.</div>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Tipo</label>
                  <select id="qType" class="form-select" required>
                    <option value="round-robin">Round Robin</option>
                    <option value="elimination">Eliminación</option>
                    <option value="liga">Liga</option>
                    <option value="americana-clasica">Americana Clásica</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Inicio</label>
                  <input type="date" id="qStart" class="form-control" />
                </div>
                <div class="col-md-4">
                  <label class="form-label">Plazas</label>
                  <input type="number" id="qSlots" class="form-control" value="16" min="2" />
                </div>
                <div class="col-md-4">
                  <label class="form-label">Estado</label>
                  <select id="qStatus" class="form-select">
                    <option value="scheduled">Programado</option>
                    <option value="open">Inscripciones abiertas</option>
                    <option value="running">En curso</option>
                    <option value="finished">Finalizado</option>
                  </select>
                </div>
                <div class="col-12">
                  <label class="form-label">Descripción</label>
                  <textarea id="qDesc" rows="3" class="form-control"></textarea>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button class="btn btn-primary" type="submit">Crear</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="module" src="/assets/js/dashboard.js"></script>
</body>

</html>