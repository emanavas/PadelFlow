<!DOCTYPE html>
<html lang="es">

<head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <title>Admin Dashboard — PádelManager</title>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
      <link rel="stylesheet" href="/assets/css/styles.css" />
      <link rel="stylesheet" href="/assets/css/dashboard.css" />
</head>

<body>
      <%- include('partials/admin_header') %>
            <div class="admin-shell">
                  <!-- Sidebar -->

                  <%- include('partials/admin_sidebar') %>

                        <!-- Main -->
                        <div class="main flex-grow-1">
                              <!-- Content -->
                              <main class="container-fluid p-4">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                          <h1 class="h3 mb-0">Gestión de Clubes</h1>
                                          <div>
                                                <a href="/admin/clubs/create" class="btn btn-primary"><i
                                                            class="fas fa-plus me-1"></i> Crear Club</a>
                                          </div>
                                    </div>

                                    <div class="col-12">
                                          <div class="card">
                                                <div class="card-header">
                                                      <i class="fas fa-shield-alt me-2"></i>
                                                      Lista de Clubes
                                                </div>
                                                <div class="card-body">
                                                      <div class="table-responsive">
                                                            <table class="table table-striped">
                                                                  <thead>
                                                                        <tr>
                                                                              <th>Nombre</th>
                                                                              <th>Ciudad</th>
                                                                              <th>Email de Contacto</th>
                                                                              <th>Teléfono de Contacto</th>
                                                                              <th>Acciones</th>
                                                                        </tr>
                                                                  </thead>
                                                                  <tbody>
                                                                        <% if (locals.allClubs &&
                                                                              locals.allClubs.length> 0) {
                                                                              %>
                                                                              <% allClubs.forEach(club=> { %>
                                                                                    <tr>
                                                                                          <td>
                                                                                                <%= club.name %>
                                                                                          </td>
                                                                                          <td>
                                                                                                <%= club.city %>
                                                                                          </td>
                                                                                          <td>
                                                                                                <%= club.contact_email
                                                                                                      %>
                                                                                          </td>
                                                                                          <td>
                                                                                                <%= club.contact_phone
                                                                                                      %>
                                                                                          </td>
                                                                                          <td>
                                                                                                <a href="/admin/clubs/edit/<%= club.id %>"
                                                                                                      class="btn btn-sm btn-outline-primary">Editar</a>
                                                                                                <a href="/admin/clubs/delete/<%= club.id %>"
                                                                                                      class="btn btn-sm btn-outline-danger">Eliminar</a>
                                                                                          </td>
                                                                                    </tr>
                                                                                    <% }); %>
                                                                                          <% } else { %>
                                                                                                <tr>
                                                                                                      <td colspan="5"
                                                                                                            class="text-center">
                                                                                                            No hay
                                                                                                            clubes para
                                                                                                            mostrar.
                                                                                                      </td>
                                                                                                </tr>
                                                                                                <% } %>
                                                                  </tbody>
                                                            </table>
                                                      </div>
                                                </div>
                                          </div>
                                    </div>

                              </main>
                        </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script type="module" src="/assets/js/dashboard.js"></script>
</body>

</html>