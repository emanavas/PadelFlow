<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Clubes — PadelFlow</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
    <link rel="stylesheet" href="/assets/css/dashboard.css" />
</head>

<body>
    <%- include('partials/admin_header') %>
        <div class="admin-shell">
            <%- include('partials/admin_sidebar') %>
                <div class="main flex-grow-1">
                    <main class="container-fluid p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 mb-0">Clubes</h1>
                            <a href="/admin/clubs/create" class="btn btn-primary"><i
                                    class="fas fa-plus me-1"></i> Crear Club</a>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nombre</th>
                                                <th>Dirección</th>
                                                <th>Ciudad</th>
                                                <th>Email de Contacto</th>
                                                <th>Teléfono de Contacto</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% allClubs.forEach(function(club) { %>
                                                <tr>
                                                    <td>
                                                        <%= club.id %>
                                                    </td>
                                                    <td>
                                                        <%= club.name %>
                                                    </td>
                                                    <td>
                                                        <%= club.address %>
                                                    </td>
                                                    <td>
                                                        <%= club.city %>
                                                    </td>
                                                    <td>
                                                        <%= club.contact_email %>
                                                    </td>
                                                    <td>
                                                        <%= club.contact_phone %>
                                                    </td>
                                                    <td>
                                                        <a href="/admin/clubs/edit/<%= club.id %>" class="btn btn-sm btn-outline-primary me-2"><i class="fas fa-edit"></i> Editar</a>
                                                        <a href="/admin/clubs/delete/<%= club.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar este club? Esta acción es irreversible.');"><i class="fas fa-trash"></i> Eliminar</a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
        </div>

        <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/main.js"></script>
</body>

</html>